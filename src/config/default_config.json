{
    "api": {
        "endpoint": "https://api.openai.com/v1",
        "api_key": "",
        "model": "gpt-4-vision-preview",
        "timeout": 30,
        "max_retries": 3
    },
    "ppt": {
        "output_format": "png",
        "dpi": 300,
        "quality": 95,
        "temp_dir": "./temp"
    },
    "lecture": {
        "default_duration": 90,
        "language": "zh-CN",
        "style": "academic",
        "include_interaction": true,
        "include_examples": true
    },
    "gui": {
        "theme": "default",
        "window_size": "1200x800",
        "font_size": 12,
        "auto_save": true
    },
    "logging": {
        "level": "INFO",
        "file": "./logs/app.log",
        "max_size": "10MB",
        "backup_count": 5
    }
}